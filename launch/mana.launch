<launch>

    <arg name="executor" default="hyper"/>
    <arg name="vnet" default="false"/>

    <node name="mana" pkg="metal" type="hidden-ros.py" ns="mana" args="--executor=$(arg executor) --agentName=mana --waitSignal" >
        <remap from="hidden/repair/in" to="/hidden/repair" unless="$(arg vnet)"/>
        <remap from="hidden/repair/out" to="/hidden/repair" unless="$(arg vnet)"/>
        <remap from="communicate/in" to="/hidden/communicate" unless="$(arg vnet)"/>
        <remap from="communicate/out" to="/hidden/communicate" unless="$(arg vnet)"/>
    </node>

</launch>
